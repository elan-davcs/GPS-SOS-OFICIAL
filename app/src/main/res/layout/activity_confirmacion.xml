<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:flow_verticalAlign="center"
    android:padding="16dp"
    android:background="#80CCCCCC"
    tools:context=".ConfirmacionActivity">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:orientation="vertical"
      android:gravity="center">
    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CORFIRMACION"
        android:layout_marginTop="30dp"
        android:textColor="@color/rosa"
        android:fontFamily="sans-serif-black"
        android:textSize="30sp"
        android:gravity="center_horizontal"/>
    <ImageView
        android:id="@+id/img_user"
        android:layout_below="@id/titulo"
        android:layout_marginTop="30dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/user"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textname_corfirmacion"
        android:layout_below="@+id/img_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="juan"
        android:textColor="@color/azul"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/text"
        android:layout_below="@+id/textname_corfirmacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Esta persona quiere agregarte en su lista de personas seguras. ¿Aceptas esta petición?"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:id="@+id/linear_buttons"
        android:layout_below="@id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:padding="5sp"
        android:gravity="center_vertical">

      <Button
          android:id="@+id/rechazar"
          android:layout_width="150dp"
          android:layout_height="50dp"
          android:layout_margin="10dp"
          android:layout_weight="1"
          android:text="Rechazar"
          android:textSize="20dp"
          android:backgroundTint="@color/rojo"/>

      <Button
          android:id="@+id/aceptar"
          android:layout_width="150dp"
          android:layout_height="50dp"
          android:layout_margin="10dp"
          android:layout_weight="1"
          android:text="Aceptar"
          android:textSize="20dp" />
    </LinearLayout>

  </RelativeLayout>
</RelativeLayout>