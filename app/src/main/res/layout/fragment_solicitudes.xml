<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/vistaSolicitudes"
    tools:context=".SolicitudesFragment">

    <RelativeLayout
        android:id="@+id/contenedor_solicitudes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title_perfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:textColor="@color/rosa"
            android:fontFamily="sans-serif-black"
            android:textSize="30sp"
            android:text="Solicitudes"/>
        <Button
            android:id="@+id/btnNoti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:text="Notificaciones"
            android:layout_below="@id/title_perfil">
        </Button>
        <RelativeLayout
            android:layout_below="@id/btnNoti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclersolicitudes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>