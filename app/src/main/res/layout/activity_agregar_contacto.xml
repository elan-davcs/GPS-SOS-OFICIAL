<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#80CCCCCC"
    tools:context=".AgregarContactoActivity">

    <RelativeLayout
        android:id="@+id/dialogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/title_agg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AGREGAR CONTACTO"
            android:textSize="30dp"
            android:gravity="center"
            android:textColor="@color/rosa"/>

        <TextView
            android:id="@+id/txtid"
            android:layout_below="@+id/title_agg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID de Contacto:"
            android:textSize="20dp"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/edit_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtid"
            android:inputType="number"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/border_edittext" />

        <TextView
            android:id="@+id/txtnombre"
            android:layout_below="@+id/edit_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre:"
            android:textSize="20dp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/texto_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtnombre"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="---"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/txtcel"
            android:layout_below="@+id/texto_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Celular:"
            android:textSize="20dp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/texto_celular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtcel"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="000 000 0000"
            android:textSize="25dp" />

        <LinearLayout
            android:id="@+id/linear_buttons"
            android:layout_below="@id/texto_celular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/buscar"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:text="Buscar"
                android:textSize="20dp"
                android:layout_marginRight="20dp"/>

            <Button
                android:id="@+id/agregar"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:text="Agregar"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>